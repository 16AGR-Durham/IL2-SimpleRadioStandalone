<UserControl x:Class="Ciribob.DCS.SimpleRadio.Standalone.Broadcaster.UI.MainWindow.FrequencyBlock.FrequencyBlockView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             Width="200"
             Height="45"
             mc:Ignorable="d">

    <StackPanel Orientation="Horizontal"   Width="200"
                Height="45">
        <TextBox  x:Name="Frequency"  Margin="10" Width="130"  />
        <ToggleButton x:Name="Modulation"
                      Margin="10"
                      Padding="5"
                      HorizontalContentAlignment="Center"
                      VerticalContentAlignment="Center"
                     >
            <TextBlock Name="ModulationText" VerticalAlignment="Center">AM</TextBlock>
        </ToggleButton>

    </StackPanel>

</UserControl>